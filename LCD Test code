#include <LiquidCrystal_I2C.h> // Include the LiquidCrystal_I2C library

// Set up the LCD
LiquidCrystal_I2C lcd(0x27, 16, 2); // Ensure the I2C address of the display (0x27) and 16 columns, 2 rows

void setup() {
    lcd.begin(16, 2);      // Initialize the LCD
    lcd.backlight();       // Turn on the backlight
    lcd.print("Hello, World!"); // Display message on the screen
}

void loop() {
    // No need to write anything here; the program runs once only
}
